{% extends 'base.html.twig' %}

{% block title %}List of Dogs{% endblock %}

{% block body %}
    <h1>List of Dogs</h1>

    <ul>
        {% for dog in dogs %}
            <li>
                {{ dog.name }} ({{ dog.age }} years old) - {{ dog.breed }} - {{ dog.sex }} - {{ dog.weight }} kg
                <a href="{{ path('dog_edit', {'id': dog.id}) }}">Edit</a>
                <form action="{{ path('dog_delete', {'id': dog.id}) }}" method="post" style="display: inline;">
                    {{ csrf_token('delete' ~ dog.id) }}
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this dog?')">Delete</button>
                </form>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('create_dog') }}">Create New Dog</a>
{% endblock %}
